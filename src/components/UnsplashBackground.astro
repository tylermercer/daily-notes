---
export interface Props {
    unsplashUrl: string;
    unsplashColor: string;
}

const { unsplashUrl, unsplashColor } = Astro.props;
---

<div
    class="background"
    style={`--unsplash-url: url(${unsplashUrl}); --unsplash-color: ${unsplashColor};`}
>
    <slot></slot>
</div>

<style>
    .background {
        background: var(--unsplash-url) center center / cover no-repeat, var(--unsplash-color);
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        text-shadow: 0 0 10px var(--unsplash-color);
    }
</style>